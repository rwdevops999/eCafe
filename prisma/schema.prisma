model Country {
  id Int @id @default(autoincrement())
  name String?
  dialCode String?
  code String?
  addresses Address[]
}

model Address {
  id Int @id @default(autoincrement())
  street String
  number  String
  box String
  city String
  postalcode String
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
  county String
  country Country? @relation(fields: [countryId], references: [id])
  countryId Int?
  user User? @relation(fields: [userId], references: [id])
  userId Int? @unique
}

model OTP {
  id Int @id @default(autoincrement())
  OTP String
  email String
  used Boolean @default(false)
  attemps Int @default(0)
  userId Int?
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model User {
  id Int @id @default(autoincrement())
  name String
  firstname String
  phone String
  email String
  password String
  passwordless Boolean
  attemps Int @default(0)
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
  blocked Boolean @default(false)
  address Address?
  roles Role[]
  policies Policy[]
  groups Group[]
}

model Group {
  id Int @id @default(autoincrement())
  name String
  description String
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
  roles Role[]
  policies Policy[]
  users User[]
}

model Task {
  id Int @id @default(autoincrement())
  name String
  description String
  status String @default("open")
  subject String
  subjectId Int?
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model History {
  id Int @id @default(autoincrement())
  title String
  description String
  originator String
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
  type String @default("info")
}
